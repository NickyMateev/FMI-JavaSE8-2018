<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/border"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/previousWeekBtn"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:tint="#A0A0A0"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24px" />

        <TextView
            android:id="@+id/weekText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/arimo"
            android:text="TextView"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="25sp"
            tools:text="Current Week" />

        <ImageView
            android:id="@+id/nextWeekBtn"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:tint="#A0A0A0"
            app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dailyCalText"
                android:layout_width="278dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="Daily calories:"
                android:textAlignment="textEnd"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/dailyCal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="calories"
                android:inputType="numberSigned"
                android:text="2700"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:paddingTop="5pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/dayLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10pt"
                    android:text="Day"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/weightLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10pt"
                    android:text="Weight"
                    android:layout_gravity="center"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/caloriesLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="35pt"
                    android:text="Calories"
                    android:textColor="#000000" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/mondayLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5pt"
                    android:text="Monday"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/mondayWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10pt"
                    android:gravity="center"
                    android:hint="kg / lbs"
                    android:inputType="numberDecimal"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/mondayCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="cal"
                    android:inputType="numberSigned"
                    android:paddingLeft="60pt"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="14sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/tuesdayLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5pt"
                    android:text="Tuesday"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/tuesdayWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10pt"
                    android:gravity="center"
                    android:hint="kg / lbs"
                    android:inputType="numberDecimal"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/tuesdayCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="cal"
                    android:inputType="numberSigned"
                    android:paddingLeft="60pt"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="14sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/wednesdayLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5pt"
                    android:text="Wednesday"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/wednesdayWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10pt"
                    android:gravity="center"
                    android:hint="kg / lbs"
                    android:inputType="numberDecimal"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/wednesdayCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="cal"
                    android:inputType="numberSigned"
                    android:paddingLeft="60pt"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="14sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/thursdayLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5pt"
                    android:text="Thursday"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/thursdayWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10pt"
                    android:gravity="center"
                    android:hint="kg / lbs"
                    android:inputType="numberDecimal"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/thursdayCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="cal"
                    android:inputType="numberSigned"
                    android:paddingLeft="60pt"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="14sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/fridayLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5pt"
                    android:text="Friday"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/fridayWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10pt"
                    android:gravity="center"
                    android:hint="kg / lbs"
                    android:inputType="numberDecimal"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/fridayCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="cal"
                    android:inputType="numberSigned"
                    android:paddingLeft="60pt"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="14sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/saturdayLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5pt"
                    android:text="Saturday"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/saturdayWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10pt"
                    android:gravity="center"
                    android:hint="kg / lbs"
                    android:inputType="numberDecimal"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/saturdayCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="cal"
                    android:inputType="numberSigned"
                    android:paddingLeft="60pt"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="14sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/sundayLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5pt"
                    android:text="Sunday"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/sundayWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10pt"
                    android:gravity="center"
                    android:hint="kg / lbs"
                    android:inputType="numberDecimal"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/sundayCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="cal"
                    android:inputType="numberSigned"
                    android:paddingLeft="60pt"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="14sp" />

            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="2pt"
            android:layout_height="53dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/avgWeightLabel"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="10pt"
                android:text="Average weight:"
                android:textAlignment="center"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/avgWeight"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="123"
                android:textAlignment="center"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/progressBarProportion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textAlignment="textEnd"
                android:layout_marginRight="4pt"
                android:layout_weight="1"
                android:text="16043/17000"
                android:textColor="#000000" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3pt"
            android:max="10"
            android:progress="3"
            android:progressDrawable="@drawable/custom_progress_bar" />
    </LinearLayout>

</LinearLayout>